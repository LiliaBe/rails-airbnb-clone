<div class="banner mb-40" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1445375011782-2384686778a0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80);">
  <h1><%=params[:category] %></h1>
</div>

<div class="container " >
  <div class="grid-container my-5">
    <% @instruments = Instrument.where(category: params[:category]) %>
    <% if @instruments.empty? %>
      <div>
        <%= "There is no instrument in this category"%>
      </div>
    <% else %>

      <% @instruments.each do |instrument| %>
        <%= link_to instrument_path(instrument) do %>
          <div class="card-trip">
            <% if instrument.photo.attached? %>
              <%= cl_image_tag instrument.photo.key %>
            <% else %>
              <%= image_tag "https://images.unsplash.com/photo-1445375011782-2384686778a0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80" %>
            <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2><%=instrument.name %></h2>
                  <p><%=instrument.description.truncate(32) %></p>
                </div>
                <h2 class="card-trip-pricing"><%=instrument.price%>â‚¬</h2>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
              </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
