<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Book an instrument</h3>
        <%= simple_form_for [@instrument, @booking] do |f| %>
          <%= f.input :start_date, as: :date, placeholder: 'Check-in' %>
          <%= f.input :end_date,  as: :date, placeholder: 'check-out' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
